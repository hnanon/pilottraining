<div class="container">
  <div class="row-fluid">
    <div class="col-sm-10 col-sm-offset-1 title">
      <h5>Training Record</h5>
      <%= link_to "Update Training Record", edit_training_record_path(@training_record), class: "pull-right" %>
    </div>
  </div>
  <div class="row-fluid">
    <div class="col-sm-10 col-sm-offset-1 main training_record">
      <h2>CL-65 Pilot Training Record</h2>
      <div class="row-fluid">
        <div class="col-sm-4"><p><strong>NAME:</strong> <%= @training_record.trainee.first_name %> <%= @training_record.trainee.last_name %></p></div>
        <div class="col-sm-3"><p><strong>ID NO:</strong> <%= @training_record.trainee.identification %></p></div>
        <div class="col-sm-5"><p><strong>TRAINING CLASSIFICATION:</strong> <%= @training_record.training_classification %></p></div>
      </div>
      <div class="row-fluid">
        <div class="col-sm-12">
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Training Type</th>
                <th>Date Completed</th>
                <th>Hours</th>
                <th>Landings</th>
                <th>Instructor</th>
                <th>Instructor ID</th>                
                <th>FAA</th>                
                <th colspan="3"></th>
              </tr>
            </thead>
    
            <tbody>
              <tr>
                <td>Cockpit Procedures</td>
                <td><%= @training_record.present? ? @training_record.cockpit_procedures_completion_date : "" %></td>
                <td>N/A</td>
                <td>N/A</td>
                <td><%= @training_record.present? ? @training_record.cockpit_procedures_instructor : "" %></td>
                <td><%= @training_record.present? ? @training_record.cockpit_procedures_instructor_id : "" %></td>
                <td class="disabled"></td>
              </tr>
              <tr>
                <td>Flight Training Simulator</td>
                <td><%= @training_record.present? ? @training_record.flight_training_simulator_completion_date : "" %></td>
                <td><%= @training_record.flight_training_simulator_minutes.present? ? (@training_record.flight_training_simulator_minutes / 60.00).round(2) : "" %></td>
                <td>N/A</td>
                <td><%= @training_record.present? ? @training_record.flight_training_simulator_instructor : "" %></td>
                <td><%= @training_record.present? ? @training_record.flight_training_simulator_instructor_id : "" %></td>
                <td class="disabled"></td>
              </tr>
              <tr>
                <td>Windshear</td>
                <td><%= @training_record.present? ? @training_record.windshear_completion_date : "" %></td>
                <td>N/A</td>
                <td>N/A</td>
                <td><%= @training_record.present? ? @training_record.windshear_instructor : "" %></td>
                <td><%= @training_record.present? ? @training_record.windshear_instructor_id : "" %></td>
                <td class="disabled"></td>
              </tr>
              <tr>
                <td>High Minimums</td>
                <td><%= @training_record.present? ? @training_record.high_minimums_completion_date : "" %></td>
                <td>N/A</td>
                <td>N/A</td>
                <td><%= @training_record.present? ? @training_record.high_minimums_instructor : "" %></td>
                <td><%= @training_record.present? ? @training_record.high_minimums_instructor_id : "" %></td>
                <td class="disabled"></td>
              </tr>
              <tr>
                <td>1800 RVR</td>
                <td><%= @training_record.present? ? @training_record._1800_rvr_completion_date : "" %></td>
                <td>N/A</td>
                <td>N/A</td>
                <td><%= @training_record.present? ? @training_record._1800_rvr_instructor : "" %></td>
                <td><%= @training_record.present? ? @training_record._1800_rvr_instructor_id : "" %></td>
                <td class="disabled"></td>
              </tr>
              <tr>
                <td>RNAV</td>
                <td><%= @training_record.present? ? @training_record.rnav_completion_date : "" %></td>
                <td>N/A</td>
                <td>N/A</td>
                <td><%= @training_record.present? ? @training_record.rnav_instructor : "" %></td>
                <td><%= @training_record.present? ? @training_record.rnav_instructor_id : "" %></td>
                <td class="disabled"></td>
              </tr>
              <tr>
                <td>Category II</td>
                <td><%= @training_record.present? ? @training_record.category_ii_completion_date : "" %></td>
                <td>N/A</td>
                <td>N/A</td>
                <td><%= @training_record.present? ? @training_record.category_ii_instructor : "" %></td>
                <td><%= @training_record.present? ? @training_record.category_ii_instructor_id : "" %></td>
                <td class="disabled"></td>
              </tr>
              <tr>
                <td>Oral</td>
                <td><%= @training_record.present? ? @training_record.oral_completion_date : "" %></td>
                <td>N/A</td>
                <td>N/A</td>
                <td><%= @training_record.present? ? @training_record.oral_instructor : "" %></td>
                <td><%= @training_record.present? ? @training_record.oral_instructor_id : "" %></td>
                <td class="no-wrap"><%= @training_record.present? ? @training_record.oral_faa : "" %></td>
              </tr>
              <tr>
                <td>Proficiency Check Simulator</td>
                <td><%= @training_record.present? ? @training_record.proficiency_check_simulator_completion_date : "" %></td>
                <td>N/A</td>
                <td><%= @training_record.present? ? @training_record.proficiency_check_simulator_landings : "" %></td>
                <td><%= @training_record.present? ? @training_record.proficiency_check_simulator_instructor : "" %></td>
                <td><%= @training_record.present? ? @training_record.proficiency_check_simulator_instructor_id : "" %></td>
                <td class="no-wrap"><%= @training_record.present? ? @training_record.proficiency_check_simulator_faa : "" %></td>
              </tr>
              <tr>
                <td>LOFT</td>
                <td><%= @training_record.present? ? @training_record.loft_completion_date : "" %></td>
                <td>N/A</td>
                <td><%= @training_record.present? ? @training_record.loft_landings : "" %></td>
                <td><%= @training_record.present? ? @training_record.loft_instructor : "" %></td>
                <td><%= @training_record.present? ? @training_record.loft_instructor_id : "" %></td>
                <td class="disabled"></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

