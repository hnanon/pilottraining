<div class="container">
  <div class="row-fluid">
    <div class="col-sm-6 col-sm-offset-3 title">
      <h5>New Training Record</h5>
    </div>
  </div>
  <div class="row-fluid">
    <div class="col-sm-6 col-sm-offset-3 main">
      <%= form_for(@training_record) do |f| %>
        <% if @training_record.errors.any? %>
          <div class="error">
            <p><%= pluralize(@training_record.errors.count, "error") %> prohibited this review from being saved:</p>
            <ul>
            <% @training_record.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
      
        <div class="row-fluid">
          <%= f.label :training_classification, "Training Classification" %>
          <%= f.select("training_classification", TrainingRecord::TRAINING_CLASSIFICATIONS, { prompt: "Select Training Classification" }, { class: "form-field" }) %>
        </div>
        <div class="row-fluid">
          <%= f.label :trainee_id, "Trainee" %>
          <%= f.collection_select(:trainee_id, @trainees, :id, :trainee_full_name_and_classification, { prompt: "Select Trainee" }, { class: "form-field" }) %>
        </div>        
        <div class="row-fluid">
          <%= f.submit "Create a New Training Record" %>
        </div>
      <% end %>
    </div>
  </div>
</div>


