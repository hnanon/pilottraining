<div class="container">
  <div class="row-fluid">
    <div class="col-sm-4 col-sm-offset-4 title">
      <h5>Login</h5>
    </div>
  </div>
  <div class="row-fluid">
    <div class="col-sm-4 col-sm-offset-4 main">
      <%= form_tag user_sessions_path, :method => :post do %>
        <% flash.each do |key, value| %>
          <%= content_tag :p, value, class: "error" %>
        <% end %>
        <div class="row-fluid">
          <%= label_tag :email %>
          <%= text_field_tag :email, nil, class: "form-field" %>
        </div>
        <div class="row-fluid">
          <%= label_tag :password %>
          <%= password_field_tag :password, nil, class: "form-field" %>
        </div>
        <div class="row-fluid">
          <%= submit_tag "Login" %>
        </div>
      <% end %>
    </div>
  </div>
</div>