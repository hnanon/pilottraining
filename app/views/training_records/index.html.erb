<div class="container">
  <div class="row-fluid">
  <div class="col-sm-3">
    <h5 class="title">Submit Training Types</h5>
    <div class="main">
      <ul class="list-unstyled">
        <li><%= link_to "Cockpit Procedures Training", new_cockpit_procedures_training_path %></li>
      </ul>
    </div>
  </div>
  <div class="row-fluid">
    <div class="col-sm-9 title">
      <h5>Training Records</h5>
    </div>
  </div>
</div>

<div class="container">
  <div class="row-fluid">
    <div class="col-sm-9 main">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Type of training</th>
            <th>Trainee</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @training_records.each do |training_record| %>
            <tr>
              <td><%= training_record.type_of_training %></td>
              <td><%= link_to "#{training_record.trainee.first_name} #{training_record.trainee.last_name}", training_record %></td>
              <td><%#= link_to 'Show', training_record %></td>
              <td><%#= link_to 'Edit', edit_training_record_path(training_record) %></td>
              <td><%#= link_to 'Destroy', training_record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
