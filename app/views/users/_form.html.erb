<div class="container">
  <div class="row-fluid">
    <div class="col-sm-4 col-sm-offset-4 title">
      <h5>Sign Up</h5>
    </div>
  </div>
  <div class="row-fluid">
    <div class="col-sm-4 col-sm-offset-4 main">
      <%= form_for(@user) do |f| %>
        <% if @user.errors.any? %>
          <div class="error">
            <p><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</p>
            <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
      
        <div class="row-fluid">
          <%= f.label :email %>
          <%= f.text_field :email, class: "form-field" %>
        </div>
        <div class="row-fluid">
         <%= f.label :password %>
         <%= f.password_field :password, class:"form-field" %>
        </div>
        <div class="row-fluid">
         <%= f.label :password_confirmation %>
         <%= f.password_field :password_confirmation, class: "form-field" %>
        </div>
        <div class="row-fluid">
          <%= f.label :first_name %>
          <%= f.text_field :first_name, class: "form-field" %>
        </div>
        <div class="row-field">
          <%= f.label :last_name %>
          <%= f.text_field :last_name, class: "form-field" %>
        </div>
        <div class="row-field">
          <%= f.label :instructor_id, "Instructor ID" %>
          <%= f.text_field :instructor_id, class: "form-field" %>
        </div>        
        <div class="row-field">
          <%= f.submit "Sign Up as an Instructor" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
